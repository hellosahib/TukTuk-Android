<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tip_email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_logo_login"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:hint="Email"
            android:padding="16dp"
            android:textColorHint="@color/colorAccent">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_email_orange_24dp"
                android:drawablePadding="8dp"
                android:inputType="textEmailAddress"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tip_password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tip_email_login"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:hint="Password"
            android:padding="16dp"
            android:textColorHint="@color/colorAccent">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_vpn_key_orange_24dp"
                android:drawablePadding="8dp"
                android:inputType="textPassword"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/text_forgot_password_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tip_password_login"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:text="Forgot Password ?"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_login_login"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_forgot_password_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_button"
            android:elevation="16dp"
            android:text="LOGIN" />
    </RelativeLayout>
</ScrollView>