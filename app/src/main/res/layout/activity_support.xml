<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_support"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            app:titleTextColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_header_about_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_support"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="About"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_content_about_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_header_about_support"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus rhoncus dapibus interdum. Sed fermentum accumsan nibh eu vestibulum. Proin pulvinar ante a nunc feugiat, non egestas mi scelerisque. Ut at lorem tristique leo dictum aliquam. Nunc nec velit felis. Sed in porttitor est. Morbi erat lorem, mattis et gravida a, sollicitudin nec elit."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_header_passenger_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content_about_support"
            android:padding="8dp"
            android:text="Dear Passenger,"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_content_passenger_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_header_passenger_support"
            android:layout_marginBottom="36dp"
            android:padding="8dp"
            android:text="Call Our Customer Support or email us for enquires,comments and complaints
Your Feedback is important to us to make TukTuk better for you,Report us any bugs in our app , imporovements and suggestions regarding app So We can serve you better"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_call_support"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content_passenger_support"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button"
            android:text="Call Customer Support"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_email_support"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_call_support"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button"
            android:text="Email us your Idea"
            android:textSize="16sp" />
    </RelativeLayout>
</ScrollView>