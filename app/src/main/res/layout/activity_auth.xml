<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DB000000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/earth_chandigarh" />

    <ImageView
        android:id="@+id/img_logo_login"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_login_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo_login"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/tv_or_auth"
        android:text="Login"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_or_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Or"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_register_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo_login"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@id/tv_or_auth"
        android:text="Register"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_auth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_login_auth"
        android:layout_marginTop="8dp"/>
</RelativeLayout>